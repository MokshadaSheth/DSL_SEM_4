#include <iostream>
using namespace std;

class Node
{
	int coef;
	int exp;
	Node *next,*prev;

public:
	Node()
	{
		coef = 0;
		exp = 0;
		next = nullptr;
		prev = nullptr;
	}

	friend class Poly;
};

class Poly
{
	Node *head = nullptr;

public:
	Node createNode();
	void insertNode();
	void display(Node *h);

};
Node Poly ::createNode()
{
	Node *newNode = new Node();
	int c,e;

}
