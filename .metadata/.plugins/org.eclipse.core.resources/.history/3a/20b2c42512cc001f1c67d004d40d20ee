#include <iostream>
using namespace std;

class Node
{
	int coef;
	int exp;
	Node *next,*prev;

public:
	Node()
	{
		coef = 0;
		exp = 0;
		next = nullptr;
		prev = nullptr;
	}

	Node(int c, int e):coef(c), exp(e), next(nullptr), prev(nullptr){}

	friend class Poly;
};

class Poly
{
	Node *head = new Node();

public:
	Node createNode();
	void insertNode();
	void display(Node *h);

};
Node Poly ::createNode()
{
	int c,e;
	cout<<"\nEnter Coefficient: ";
	cin>>c;
	cout<<"\nEnter Exponent: ";
	cin>>e;
	Node *newNode = new Node(c,e);
	return newNode;
}

void Poly :: insertNode()
{
	int totalTerms;

	cout<<"\nEnter how many terms you want to enter: ";
	cin>>totalTerms;

	for(int i=0;i<totalTerms;i++){
		Node *newTerm = createNode();

		if(head == nullptr)
		{
			head = newTerm;
			head->next = head;
			head->prev = head;

		}
		else
		{
			Node *temp = head;
			while((temp->next) != head && (newTerm->exp < temp->exp))
			{
				temp = temp->next;

			}
			newTerm->next = temp->next;
			newTerm->prev = temp;
			temp->next->prev = newTerm;
			temp->next = newTerm;

		}
	}
}


